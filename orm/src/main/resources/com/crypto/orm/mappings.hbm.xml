<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.crypto.orm.entities.MerchantDetails" table="MERCHANT_DETAILS">
        <id name="merchantId" type="java.lang.Long">
            <column name="MERCHANT_ID" />
            <generator class="increment" />
        </id>
        <property name="bussinessName" type="string">
            <column name="BUSINESS_NAME" length="30"  />
        </property>
        <property name="email" type="string">
            <column name="EMAIL" length="30"  />
        </property>
        <property name="firstName" type="string">
            <column name="FIRST_NAME" length="30"   />
        </property>
        <property name="secondName" type="string">
            <column name="SECOND_NAME" length="30" />
        </property>
        <property name="phoneNumber" type="string">
            <column name="PHONE_NUMBER" length="30" />
        </property>
        <property name="address" type="string">
            <column name="ADDRESS" length="30" />
        </property>
        <property name="industry" type="string">
            <column name="INDUSTRY" length="30" />
        </property>
        <property name="postalCode" type="string">
            <column name="POSTAL_CODE" length="30" />
        </property>
        <property name="city" type="string">
            <column name="CITY" length="30" />
        </property>
        <property name="state" type="string">
            <column name="STATE" length="30" />
        </property>
        <property name="country" type="string">
            <column name="COUNTRY" length="30" />
        </property>
        <property name="store" type="string">
            <column name="STORE" length="30" />
        </property>
        <property name="primaryWebsite" type="string">
            <column name="PRIMARY_WEBSITE" length="30" />
        </property>
        <property name="shopingCartOrPosSoftware" type="string">
            <column name="SHOPING_CART_OR_POS_SOFTWARE" length="30" />
        </property>
    </class>
</hibernate-mapping>